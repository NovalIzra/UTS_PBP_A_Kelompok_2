<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/abu"
    android:background="@color/abu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/txtnamatiket"
            android:fontFamily="@font/roboto_light"
            android:text="@string/flight"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtkalender"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/roboto_light"
            android:text="00-00-0000"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/txtujuan"
            android:layout_below="@+id/txtnamatiket"
            android:fontFamily="@font/roboto_light"
            android:text="tujuan"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txtnamatiket"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/iconpessengger"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/txtpasenger"
                android:fontFamily="@font/roboto_light"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>



    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>